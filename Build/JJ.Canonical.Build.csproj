<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>0.250.$(BuildNum)</Version>
    <Description>JJ.Canonical contains shared data types used across JJ projects. JJ.Canonical.Build is a supporting tool for its development, designed to trigger at the start of the solution build.</Description>
    <PackageTags></PackageTags>
    <Authors>JJ van Zon</Authors>
    <Copyright>Copyright © Jan Joost van Zon 2013 - 2025</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>    
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <IncludeSymbols>True</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
    <PackageIcon>jj-icon-64x64-margin4.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/jjvanzon/JJ.Canonical</RepositoryUrl>
    <PackageProjectUrl>https://github.com/jjvanzon/JJ.Canonical</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="..\Resources\jj-icon-64x64-margin4.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <None Remove="JJ.Canonical.Build.v3.ncrunchproject" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="JJ.AutoIncrementVersion" Version="1.8.1041" />
  </ItemGroup>

</Project>
