<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="Version.props" Condition="Exists('Version.props')" />
  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <OutputType>Library</OutputType>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <!--<Version>0.250.1</Version>-->
    <Version>0.250.$(VERSION_FROM_FILE)</Version>
    <Description>Types to share data between JJ projects.</Description>
    <PackageTags>canonical model integration esb</PackageTags>
    <Authors>JJ van Zon</Authors>
    <Copyright>Copyright © Jan Joost van Zon 2013-2025</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>    
    <RepositoryUrl>https://github.com/jjvanzon/JJ.Canonical</RepositoryUrl>
    <PackageProjectUrl>https://github.com/jjvanzon/JJ.Canonical</PackageProjectUrl>
    <PackageIcon>jj-icon-64x64-margin4.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>
  <ItemGroup>
    <None Remove="JJ.Business.CanonicalModel.v3.ncrunchproject" />
    <None Remove="NCrunch.JJ.Business.CanonicalModel_AnalysisBuild.xml" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\Resources\jj-icon-64x64-margin4.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  
  <Target Name="AutoIncrementVersion" BeforeTargets="Compile">
    <Message Text="AUTO-INCREMENTING VERSION" Importance="High" />

    <!-- Read the existing build number -->
    <ReadLinesFromFile File="$(MSBuildThisFileDirectory)BuildNumber.txt" Condition="Exists('$(MSBuildThisFileDirectory)BuildNumber.txt')">
      <Output TaskParameter="Lines" PropertyName="BuildNum" />
    </ReadLinesFromFile>

    <!-- Ensure BuildNum is set before incrementing -->
    <PropertyGroup>
      <BuildNum Condition="'$(BuildNum)' == ''">0</BuildNum>
    </PropertyGroup>

    <!-- Increment the number -->
    <Exec Command="powershell -Command &quot;[int]$v=$(BuildNum); $v++; Set-Content BuildNumber.txt $v&quot;" />

    <!-- Force MSBuild to re-read the updated file -->
    <ReadLinesFromFile File="$(MSBuildThisFileDirectory)BuildNumber.txt">
      <Output TaskParameter="Lines" PropertyName="NewBuildNum" />
    </ReadLinesFromFile>

    <!-- Print the new build number to the MSBuild log -->
    <Message Text="NewBuildNum after increment: $(NewBuildNum)" Importance="High" />
    
    <!-- Apply the new version -->
    <!--<PropertyGroup>
      <Version>0.250.$(NewBuildNum)</Version>
    </PropertyGroup>-->
    
    <!-- Write the new version to a temporary MSBuild props file -->
    <WriteLinesToFile 
        File="$(MSBuildThisFileDirectory)Version.props" 
        Lines="&lt;Project&gt;&lt;PropertyGroup&gt;&lt;VERSION_FROM_FILE&gt;$(NewBuildNum)&lt;/VERSION_FROM_FILE&gt;&lt;/PropertyGroup&gt;&lt;/Project&gt;" 
        Overwrite="true" 
        Encoding="UTF-8" />

  </Target>

</Project>